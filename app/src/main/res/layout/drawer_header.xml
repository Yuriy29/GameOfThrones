<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:paddingTop="@dimen/space_medial_24"
    android:paddingStart="@dimen/space_normal_16"
    android:paddingEnd="@dimen/space_normal_16"
    android:paddingBottom="@dimen/space_small_8"
    android:background="@drawable/nav_header_bg"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/size_avatar"
        android:layout_height="@dimen/size_avatar"
        android:layout_marginTop="@dimen/space_normal_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/email"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>